<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Automate</title>

  <link rel='stylesheet' href='/css/bootstrap.min.css'>
  <link rel='stylesheet' href='/css/font-awesome.css'>
  <link rel='stylesheet' href='/css/style.css'>
</head>
<body>
  <h1>Run id: {{runId}}
  </h1>
  <span class="label label-{{#if end}}success{{else}}warning{{/if}}">
    {{#if end}}
      Completed
    {{else}}
      Running
    {{/if}}
  </span>
  {{#if end}}
    <span class="label label-{{#if result}}success{{else}}important{{/if}}">
      {{#if result}}
        Pass
      {{else}}
        Failed
      {{/if}}
    </span>
  {{/if}}
  <br>
  <br>
  <div class="row">
      <div class="span10">
        <div class="accordion" id="accordion1">
          {{#eachProperty tests}}
            <div class="accordion-group">
              <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapse{{idEscape property}}">
                  <i class="{{#moduleResult value}}icon-ok{{else}}icon-remove{{/moduleResult}}"></i>
                  {{property}}
                </a>
              </div>
              <div id="collapse{{idEscape property}}" class="accordion-body collapse">
                <div class="accordion-inner">
                  {{#each value}}
                    <div class="accordion-group">
                      <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapse{{index}}">
                          <i class="{{#if result}}icon-ok{{else}}icon-remove{{/if}}"></i>
                          {{name}}
                        </a>
                      </div>
                      <div id="collapse{{index}}" class="accordion-body collapse">
                        <div class="accordion-inner">
                          {{#if options.message}}
                            {{options.message}}
                          {{/if}}
                          {{#if options.error}}
                            {{options.error.message}}
                          {{/if}}
                        </div>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          {{/eachProperty}}
          
        </div>
      </div>
    </div>

  <script src="/js/jquery-1.8.3.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
</body>
</html>
